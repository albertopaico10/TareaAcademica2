<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_take_photo"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp" android:layout_marginTop="20dip">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
            <ImageView
                android:layout_width="@dimen/dimen_x6_10"
                android:layout_height="@dimen/dimen_x11_5"
                android:id="@+id/service_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:background="#c0c0c0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sub_title_product_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:layout_toRightOf="@+id/service_photo"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:id="@+id/title_service"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_toRightOf="@+id/service_photo"
                android:layout_below="@+id/title_service"
                android:text="@string/product_detail_1"
                android:id="@+id/sub_title_product"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>